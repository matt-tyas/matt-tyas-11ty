@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;600&display=swap');

html {
    font-size: 1rem;
	font-size: clamp(1rem, 0.95rem + 0.25vw, 1.25rem);
}

body {
    font-family: 'Poppins', sans-serif;
    margin: 0 5%;
    background-color: var(--color-grey-warm-light);
}

.mt-main {
    padding-top: 0;
    margin-bottom: 6rem;
}

@media (--mq-large) {
    .mt-main {
        padding-top: 0;
    }
}

@media (--mq-large) {
    .mt-header {
      justify-content: space-between;
      flex-direction: row;
      margin-bottom: var(--spacing-32);
    }
}

.mt-header {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    position: relative;
    height: 100px;
    z-index: 2;
    margin: var(--spacing-16) 1%;
}
  
@media (--mq-large) {
    .mt-header {
      justify-content: space-between;
      flex-direction: row;
      margin-bottom: var(--spacing-32);
    }
}

.mt-logo {
    display: flex;
    align-items: center; 
    height: 100px;
}

.mt-computer {
    margin-right: 1rem;
}

.mt-logo:hover .mt-expression--is-happy {
    display: block;
}

.mt-logo:hover .mt-computer {
    position: relative;
    animation: wiggle .75s ease;
}

@keyframes wiggle {
   0% { transform: rotate(5deg); }
   50% { transform: rotate(-5deg); }
  100% { transform: rotate(0deg); }
}

.mt-logo:hover .mt-expression {
    display: none;
}

.mt-expression--is-happy {
    display: none;
    animation: none;
}

.mt-section {
    margin: 4rem 0 0 0;
}

@media (--mq-large) {
    .mt-section {
        margin: 4rem 0 0 0;
    }
}

.mt-stacking {
    z-index: 3;
    background-color: var(--color-grey-warm-light);
}

@media (--mq-medium) {
    .mt-stacking {
        background-color: transparent;
    }
}

.mt-me {
    width: 460px;
}

.mt-portrait {
    height: 220px;
    overflow: visible;
}

.mt-portrait .mt-me {
    position: relative;
    top: 110px;
}

@media (--mq-medium) {
    .mt-portrait .mt-me{
        top: 0;
    }
}

@media (--mq-medium) {
    .mt-portrait {
        position: relative;
        left: -2rem;
        height: auto;
        overflow: hidden;
    }
}

.mt-icon {
    float: left;
    margin-bottom: 2rem;
    position: sticky;
    top: 1rem;
    align-self: flex-start;
}

@media (--mq-large) {
    .mt-icon {
        float: right;
    }
}

.mt-nav {
    margin-top: 0; 
    padding: 0.5rem 0 0 0;
}

@media (--mq-large) {
    .mt-nav {
      margin-top: 8px; 
      margin-bottom: var(--spacing-32);
      padding: 1.1rem 0 0 0;
    }
}

.mt-nav__item {
    margin-right: 1rem;
}

@media (--mq-large) {
    .mt-nav__item  {
        margin-right: 1rem;
    }
}

.mt-nav__item:hover {
    text-decoration: none;
}

.mt-section--bg {
    position: relative;
    z-index: 2;
    margin: 0;
}

@media (--mq-large) {
    .mt-section--bg  {
        margin: 4rem 0 0 0;
    }
}

