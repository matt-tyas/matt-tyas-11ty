.mt-text {
    max-width: 800px;
}

h1,
.mt-h1 {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 300;
}

h2,
.mt-h2 {
    font-size: clamp(2rem, 3vw, 7rem);
    margin: 0 0 1rem 0;
}

.mt-p-lead {
	font-size: clamp(3rem, 6vw, 10rem);
    font-weight: 600;
    line-height: 1.2;
    margin: 1rem 0 1.5rem 0;
}

@media (--mq-medium) {
    .mt-p-lead {
        line-height: 1.2;
        margin: 0 0 3rem 0;
    }
}

.mt-p-sub {
    font-size: clamp(2rem, 1.5vw, 7rem);
    font-weight: 300;
    line-height: 1.4;
    margin: 0 0 2.5vh 0;
}

.mt-work-logo {
    margin: 3rem 0 0 0;
}

.mt-blog-post {
    margin: 0 0 2.5vh 0;
}

p {
    font-weight: 300;
    line-height: 1.4;
    margin: 0 0 2.5vh 0;
}

a {
    color: var(--color-black);
    text-decoration: underline;
}

a:hover {
    color: var(--color-black);
    text-decoration: none;
}